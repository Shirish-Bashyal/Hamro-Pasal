@model IEnumerable<AdsFirstLookDTO>



@{
    Layout = "~/Views/Shared/Layout.cshtml";
}



 @*nav bar*@
 <div class='container mx-auto px-4 py-4 h-14 flex justify-between Menubar'>
        <div class='py-0 text-4xl flex flex-row'> 
            @*<Link to='/Userdetails'>*@
            <a asp-action="Profile" >

                <i class="fa-solid fa-bars"></i>@*</Link>*@</a>
          <div class='h-14 w-16 px-3 rounded-full border-gray-600 '> 
              <img src="~/main_logo.png" alt="react logo" /></div></div>
        @*  <Link to='/Location'>*@
            <a asp-action="Location" >

        <div class='py-1 underline underline-offset-4 font-Inter'><div class='location'>Locations<i class="fa-solid fa-location-dot px-1"></i></div></div>
        @*</Link>*@
        </a>


      </div>



      @*search part*@
      <label class="relative block px-2 py-3">
        <span class="sr-only">Search</span>
        <span class="absolute inset-y-0 left-0 flex items-center pl-2">
          <i class="fa-solid fa-magnifying-glass px-4 text-slate-400"></i>
        </span>
        <input
          class="placeholder:italic placeholder:text-slate-400 block bg-white w-full border border-slate-300 rounded-md py-2 pl-9 pr-3 shadow-sm focus:outline-none focus:border-sky-500 focus:ring-sky-500 focus:ring-1 sm:text-sm"
          placeholder="Search for anything..."
          type="text"
          name="search"
        />
      </label>





      @*latest deals*@
       <div class="container mx-auto px-4 py-2 text-xl font-Inter font-semibold ">
        Latest deals
      </div>
     @* {/* <div>
                <div class=''>
                <img class="h-auto max-w-xs"src={Sweater} alt="tops_image" /></div>
            </div> */}
      {/*products Container and details*/}*@

      <div class="px-3 flex justify-between">
        <div class="bg-gray-200 h-48 w-40  flex flex-col rounded-lg ">
          <img
            class="object-fit h-48 w-96 rounded-t-lg "
            src="~/Images/Sweater.jpg"
            alt="sweater_img"
          />
          <p class="font-Intern px-1 py-1 text-black text-xl leading-4">
            Sweater
          </p>

          <div class="flex justify-between leading-3">
            <p class="px-1 text-lg py-1 text-red-500">Nrp:250</p>
            <p class="text-red-500 py-1 px-4 text-lg">
              <i class="fa-solid fa-heart"></i>
            </p>
          </div>
        </div>
        <div class="bg-gray-200 h-48 w-40  flex flex-col rounded-lg">
          <img
            class="object-fit h-50 w-80 rounded-t-lg "
            src="~/Images/Table.jpg"
            alt="table_img"
          />
          <p class="font-Intern px-1 py-1 text-black text-xl leading-4">
            Woodern table
          </p>

          <div class="flex justify-between leading-3">
            <p class="px-1 text-lg py-1 text-red-500">Nrp:15000</p>
            <p class="text-red-500 py-1 px-4 text-lg">
              <i class="fa-regular fa-heart"></i>
            </p>
          </div>
        </div>
      </div>

      @*sales ad*@
       <div>
        <div class="container mx-auto px-3 py-5">
          <img
            class="object-fit h-36 w-full rounded-lg"
            src=~/Images//Sales.jpg
            alt="sale_img"
          />
        </div>
      </div>


      @*browse category*@
      <div class="container mx-auto px-4  text-xl font-Inter font-semibold browerDetails">
        Browser Catagories
      </div>

      <div class="px-6 flex justify-between">
        <div class="carsDetails">
          <i class="fa-solid fa-car px-1 text-red-500"></i>
          <p>Car</p>
        </div>
        <div class="bikeDetails">
          <i class="fa-solid fa-motorcycle px-1 text-cyan-500"></i>
          <p>Bike</p>
        </div>
        <div class="gagetsDetails">
          <i class="fa-solid fa-mobile-screen px-5 text-green-500"></i>
          <p>Gadgets</p>
        </div>
        <div class="fashionDetails">
          <i class="fa-solid fa-shirt px-5 text-indigo-500"></i>
          <p>Fashion</p>
        </div>
        <div class="furnitureDetails">
          <i class="fa-solid fa-couch px-5 text-pink-700"></i>
          <p>Furniture</p>
        </div>
      </div>

      @*trial part *@
       <div class="px-3 py-3 flex justify-between">
        <div class="bg-gray-200 h-48 w-40 md:w-48 flex flex-col rounded-lg ">
          <img
            class="object-fit h-48 w-96 rounded-t-lg "
            src={sofa}
            alt="sofa_img"
          />
          <p class="font-Intern px-1 py-1 text-black text-xl leading-4">
            Couch
          </p>

          <div class="flex justify-between leading-3">
            <p class="px-1 text-lg py-1 text-red-500">Nrp:25000</p>
            <p class="text-red-500 py-1 px-4 text-lg">
              <i class="fa-regular fa-heart"></i>
            </p>
          </div>
        </div>

        <div class="bg-gray-200 h-48 w-40  flex flex-col rounded-lg">
          <img
            class="object-fit h-52 w-96 rounded-t-lg "
            src={bike}
            alt="bike_img"
          />
          <p class="font-Intern px-1 py-1 text-black text-xl leading-4">
            Royal enfield
          </p>

          <div class="flex justify-between leading-3">
            <p class="px-1 text-lg py-1 text-red-500">Nrp:150000</p>
            <p class="text-red-500 py-1 px-4 text-lg">
              <i class="fa-regular fa-heart"></i>
            </p>
          </div>
        </div>
      </div>



      @*database part*@
<div  class="all_ads_box" >

    @foreach(var item in Model )
    {
        <div  class="individual_ads" > 
                      <div class="image_inside_ads">

                             <img src="~/Images/noprofile.jpg" width=25 height=25 alt="..">
                       </div>
                   <div  class="ads_data">  
                       <div class="ads_title"> 
                           @Html.DisplayNameFor(model=>model.AdTitle):
                            @Html.DisplayFor(modelItem => item.AdTitle )

                        </div>

                            <div class="ads_price"> 
                    @Html.DisplayNameFor(model=>model.Price):
                    @Html.DisplayFor(modelItem => item.Price )

                            </div>



                   </div>
        </div>

    }


</div>