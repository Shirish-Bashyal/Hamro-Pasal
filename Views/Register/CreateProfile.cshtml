

<section>
      <div class="profileSection">


        <div class="sub-container">


          <div class="profile-pic-div">
            <img src="~/Images/avatar.png" alt="Avater" id="ProfileImage" />
            <input type="file" id="file" />
            <label for="file" id="uploadBtn">Choose Photo</label>
          </div>

          <div class="details">


            <div class="Info">
              <div class="Titleprofessional">Basic Info</div>
              <label for="FirstName">Name</label>
              <input type="text" placeholder="Enter your name" id="Name"
                maxlength="25"
                required />
            </div>
            <div class="Info">
              <label for="Address">Address</label>
              <input type="text" placeholder="Enter your address" id="Address"
                maxlength="25" required />
            </div>
            <div class="Info">
              <label for="Contact">Contact Info</label>
              <input type="tel" placeholder="Enter your Contact Info" id="Contact"
                maxlength="35" required />
            </div>
            <div class="Info">
              <label for="EmailAddress">Email address</label>
              <input type="email" placeholder="Enter your Email" id="Email"
                maxlength="35" required />
            </div>

            <button id="Save" type="submit">Save</button>
          </div>


        </div>




      </div>






</section>
